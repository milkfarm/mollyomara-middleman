<% wrap_layout :layout do %>
  <section id="splash">
    <div class="row">
      <div class="col-left">
        <h1>Portfolio</h1>
        <p>
          A summary at Molly's most notable projects
        </p>
      </div>
      <div class="col-right" style="line-height: 0;">
      </div>
    </div>
  </section>

  <section id="content">
    <div class="row">
      <div class="col-left">
        <% id = current_page.data.id || [1,3,4,6,7,8,11,13,14,15].sample %>
        <%= image_tag "projects/photo/#{id}/m_original.jpg", alt: '' %>
      </div>
      <div class="col-right">
        <%= yield %>
      </div>
    </div>
  </section>
<% end %>
